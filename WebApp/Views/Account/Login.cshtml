@model LoginViewModel
@{
    ViewBag.Title = "Login";
    Layout = "~/Views/Shared/_LoginLayout.cshtml";
}
<!-- Login forms -->
<div class="container">
    <div class="row">
        <div class="col-sm-9 col-md-7 col-lg-5 mx-auto">
            <div class="card card-signin my-5">
                <div class="card-body">
                    <h5 class="card-title text-center">Log in</h5>
                    <form class="form-signin" action="/account/login" method="post">
                        @Html.HiddenFor(m => m.ReturnUrl)
                        <p>Log in om toegang te krijgen tot "Het Koude Frietje"</p>
                        @if (Model.NotFound)
                        {
                            <!-- Error -->
                            <div class="alert alert-danger" role="alert">
                                Er is iets fout gegaan!
                            </div>
                        }
                        <!-- Drop downs voor de rollen -->
                        <div class="form-group">
                            <select class="form-control" name="Username">
                                <option value="admin@domain.com">Baas</option>
                                <option value="user@domain.com">Keuken medewerkers</option>
                            </select>
                        </div>
                        <div class="form-group">
                            <!-- Wachtwoord form voor baas/keuken -->
                            @Html.PasswordFor(m => m.Password, new { @class = "form-control", placeholder = "Password", required = true })
                        </div>
                        <br>
                        <button class="btn btn-primary">Log in</button>
                    </form>
                </div>
            </div>
        </div>
    </div>
</div>
